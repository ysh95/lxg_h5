page {
  background-color: #F6F6F6;
}
.job {
  width: 750rpx;
}
.content {
  width: 700rpx;
  padding-bottom: 90rpx;
  background-color: #FFFFFF;
  padding: 26rpx;
  margin-top: 20rpx;
}
.content .top {
    width: 100%;
    border-bottom: 1rpx solid #EEEEEE;
    padding-bottom: 30rpx;
}
.content .top .title {
      width: 100%;
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      -webkit-box-pack: justify;
      -webkit-justify-content: space-between;
              justify-content: space-between;
}
.content .top .title text {
        color: #343434;
        font-size: 30rpx;
}
.content .top .title text:last-of-type {
          color: #FF0000;
}
.content .top > text {
      color: #565656;
      font-size: 24rpx;
      display: block;
      margin-top: 6rpx;
}
.content .bottom {
    width: 100%;
    padding-top: 30rpx;
}
.content .bottom text {
      color: #343434;
      font-size: 30rpx;
      display: block;
      margin-bottom: 20rpx;
}
.content .bottom image {
      width: 100%;
      height: 100%;
}
.vip-box {
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  width: 450rpx;
  background: #FFFFFF;
  border-radius: 6rpx;
}
.vip-box .close {
    padding: 20rpx;
    position: absolute;
    right: 0;
    top: 0;
    color: #999999;
    font-weight: bold;
    font-size: 40rpx;
}
.vip-box .text {
    font-size: 26rpx;
    color: #909090;
    margin-top: 60rpx;
    font-weight: bold;
    text-align: center;
    padding: 0rpx 30rpx 0 30rpx;
    box-sizing: border-box;
    width: 100%;
    line-height: 1.5;
}
.vip-box .text > text {
      display: block;
}
.vip-box .text > text:first-of-type {
        color: #565656;
        font-size: 38rpx;
        margin-bottom: 20rpx;
}
.vip-box .fot {
    height: 115rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: justify;
    -webkit-justify-content: space-between;
            justify-content: space-between;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    border-top: 1rpx solid #DDDDDD;
    width: 100%;
    padding: 0 30rpx;
    box-sizing: border-box;
    margin-top: 30rpx;
}
.vip-box .fot > view {
      width: 174rpx;
      height: 50rpx;
      line-height: 50rpx;
      border-radius: 6rpx;
      font-size: 24rpx;
      color: #FFFFFF;
      font-weight: bold;
      background: -webkit-linear-gradient(bottom, #1173e7, #0154b3);
      background: linear-gradient(0deg, #1173e7, #0154b3);
      text-align: center;
}
.vip-box .fot .cancel {
      border: 1rpx solid #0076FF;
      color: #0076FF;
      background: #FFFFFF;
}

