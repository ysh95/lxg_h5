page {
  background: #f6f6f6;
}
.post {
  width: 750rpx;
}
.form {
  width: 700rpx;
  padding: 26rpx;
  margin-top: 20rpx;
  background-color: #ffffff;
}
.form .item {
    margin-bottom: 36rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: justify;
    -webkit-justify-content: space-between;
            justify-content: space-between;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
}
.form .item:last-of-type {
      margin-bottom: 0;
}
.form .item label {
      color: #343434;
      font-size: 28rpx;
}
.form .item label:after {
        content: '*';
        color: #ff0000;
        font-size: 28rpx;
}
.form .item input {
      width: 500rpx;
      border: 1rpx solid #dddddd;
      border-radius: 6rpx;
      padding: 16rpx 20rpx;
      color: #898989;
      font-size: 24rpx;
}
.form .item .placeholderSty {
      color: #898989;
      font-size: 24rpx;
}
.form .item .textarea {
      width: 520rpx;
      border: 1rpx solid #dddddd;
      border-radius: 6rpx;
      padding: 16rpx 10rpx;
      color: #898989;
      font-size: 24rpx;
      height: 200rpx;
}
.form .item .imgList {
      width: 540rpx;
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
}
.form .item .imgList image {
        width: 102rpx;
        height: 96rpx;
        margin-right: 10rpx;
}
.four .item input {
  width: 480rpx !important;
}

