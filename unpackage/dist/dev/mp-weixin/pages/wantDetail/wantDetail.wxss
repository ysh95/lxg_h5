page {
  background-color: #f6f6f6;
}
.want {
  width: 750rpx;
}
.item {
  width: 700rpx;
  padding: 26rpx;
  background-color: #ffffff;
  margin-bottom: 20rpx;
}
.item .title {
    position: relative;
    font-weight: bold;
    color: #333333;
    font-size: 32rpx;
    padding-left: 28rpx;
    margin-bottom: 18rpx;
}
.item .title::after {
      content: '';
      position: absolute;
      width: 10rpx;
      height: 36rpx;
      background: #0076ff;
      border-radius: 6rpx;
      left: 0;
      top: 50%;
      -webkit-transform: translateY(-50%);
              transform: translateY(-50%);
}
.item .every {
    width: 100%;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    -webkit-box-pack: justify;
    -webkit-justify-content: space-between;
            justify-content: space-between;
    margin-top: 10rpx;
}
.item .every label {
      font-size: 28rpx;
      color: #343434;
}
.item .every > text {
      color: #999999;
      font-size: 26rpx;
      display: block;
      width: 530rpx;
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
}
.item .four > text {
    color: #999999;
    font-size: 26rpx;
    display: block;
    width: 555rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.item .four .textLine {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    white-space: pre-wrap;
}
.item .four .img {
    width: 555rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-flex-wrap: wrap;
            flex-wrap: wrap;
}
.item .four .img image {
      width: 176rpx;
      height: 128rpx;
      margin: 0 12rpx 12rpx 0;
}
.item .four .img image:nth-of-type(3n) {
        margin-right: 0;
}

