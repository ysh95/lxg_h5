page {
  background-color: #f6f6f6;
}
.investor {
  width: 750rpx;
}
.content {
  margin-top: 20rpx;
  padding-bottom: 90rpx;
}
.content .item {
    width: 700rpx;
    padding: 26rpx;
    background-color: #ffffff;
    margin-bottom: 10rpx;
}
.content .item .top {
      width: 100%;
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      -webkit-box-pack: justify;
      -webkit-justify-content: space-between;
              justify-content: space-between;
      -webkit-box-align: center;
      -webkit-align-items: center;
              align-items: center;
}
.content .item .top text {
        color: #333333;
        font-size: 32rpx;
        display: block;
        width: 220rpx;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
}
.content .item .top text:last-of-type {
          width: 300rpx;
          text-align: right;
          font-size: 30rpx;
          color: #ff0000;
}
.content .item .itemContent {
      width: 100%;
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      margin-top: 16rpx;
}
.content .item .itemContent label {
        color: #565656;
        font-size: 28rpx;
}
.content .item .itemContent text {
        display: block;
        width: 560rpx;
        margin-left: 20rpx;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
        color: #565656;
        font-size: 28rpx;
}

