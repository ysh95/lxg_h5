    width: 100%;
    padding: 0 30rpx;
    box-sizing: border-box;
    margin-top: 30rpx;
}
.vip-box .fot > view {
      width: 174rpx;
      height: 50rpx;
      line-height: 50rpx;
      border-radius: 6rpx;
      font-size: 24rpx;
      color: #FFFFFF;
      font-weight: bold;
      background: -webkit-linear-gradient(bottom, #1173e7, #0154b3);
      background: linear-gradient(0deg, #1173e7, #0154b3);
      text-align: center;
}
.vip-box .fot .cancel {
      border: 1rpx solid #0076FF;
      color: #0076FF;
      background: #FFFFFF;
}
