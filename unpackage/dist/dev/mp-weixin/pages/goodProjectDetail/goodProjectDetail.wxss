.item {
  width: 700rpx;
  padding: 26rpx;
  background-color: #ffffff;
  margin-top: 20rpx;
}
.item > image {
    width: 100%;
    height: 300rpx;
}
.item .title {
    position: relative;
    font-weight: bold;
    color: #333333;
    font-size: 32rpx;
    padding-left: 28rpx;
    margin-bottom: 18rpx;
}
.item .title::after {
      content: '';
      position: absolute;
      width: 10rpx;
      height: 36rpx;
      background: #0076ff;
      border-radius: 6rpx;
      left: 0;
      top: 50%;
      -webkit-transform: translateY(-50%);
              transform: translateY(-50%);
}
.item .every {
    width: 100%;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    -webkit-box-pack: justify;
    -webkit-justify-content: space-between;
            justify-content: space-between;
    margin-top: 10rpx;
}
.item .every label {
      font-size: 28rpx;
      color: #343434;
}
.item .every > text {
      color: #999999;
      font-size: 26rpx;
      display: block;
      width: 530rpx;
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
}
.item .four > text {
    color: #999999;
    font-size: 26rpx;
    display: block;
    width: 555rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.item .four .textLine {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    white-space: pre-wrap;
}
.item .four .img {
    width: 555rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-flex-wrap: wrap;
            flex-wrap: wrap;
}
.item .four .img image {
      width: 176rpx;
      height: 128rpx;
      margin: 0 12rpx 12rpx 0;
}
.item .four .img image:nth-of-type(3n) {
        margin-right: 0;
}
.vip-box {
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  width: 450rpx;
  background: #FFFFFF;
  border-radius: 6rpx;
}
.vip-box .close {
    padding: 20rpx;
    position: absolute;
    right: 0;
    top: 0;
    color: #999999;
    font-weight: bold;
    font-size: 40rpx;
}
.vip-box .text {
    font-size: 26rpx;
    color: #909090;
    margin-top: 60rpx;
    font-weight: bold;
    text-align: center;
    padding: 0rpx 30rpx 0 30rpx;
    box-sizing: border-box;
    width: 100%;
    line-height: 1.5;
}
.vip-box .text > text {
      display: block;
}
.vip-box .text > text:first-of-type {
        color: #565656;
        font-size: 38rpx;
        margin-bottom: 20rpx;
}
.vip-box .fot {
    height: 115rpx;
