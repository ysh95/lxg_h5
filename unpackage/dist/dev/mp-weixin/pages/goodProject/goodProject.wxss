.searsh {
  width: 660rpx;
  margin: 0 26rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  border-radius: 6rpx;
  height: 60rpx;
  padding: 0 20rpx;
  background-color: #f4f4f4;
}
.searsh input {
    width: 600rpx;
}
.searsh image {
    width: 28rpx;
    height: 28rpx;
}
.tab {
  width: 750rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-justify-content: space-around;
          justify-content: space-around;
  height: 80rpx;
  line-height: 80rpx;
}
.tab text {
    font-size: 30rpx;
    color: #343434;
}
.tab .title-sel {
    color: #0076ff;
    border-bottom: 4rpx solid #007aff;
}
.content {
  width: 700rpx;
  padding: 26rpx 26rpx 90rpx;
}
.content .item {
    width: 100%;
    border-bottom: 1rpx solid #eeeeee;
    padding: 26rpx 0;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: justify;
    -webkit-justify-content: space-between;
            justify-content: space-between;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
}
.content .item image {
      width: 220rpx;
      height: 162rpx;
}
.content .item .rigth {
      width: 450rpx;
}
.content .item .rigth .top {
        width: 100%;
        display: -webkit-box;
        display: -webkit-flex;
        display: flex;
        -webkit-box-pack: justify;
        -webkit-justify-content: space-between;
                justify-content: space-between;
}
.content .item .rigth .top text {
          color: #343434;
          font-size: 30rpx;
          overflow: hidden;
          text-overflow: ellipsis;
          white-space: nowrap;
}
.content .item .center {
      margin: 8rpx 0;
      color: #565656;
      font-size: 24rpx;
      width: 450rpx;
      text-overflow: ellipsis;
      display: -webkit-box;
      -webkit-box-orient: vertical;
      -webkit-line-clamp: 2;
      overflow: hidden;
}
.content .item .bottom {
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      -webkit-box-pack: justify;
      -webkit-justify-content: space-between;
              justify-content: space-between;
      -webkit-box-align: center;
      -webkit-align-items: center;
              align-items: center;
}
.content .item .bottom text {
        display: block;
        color: #898989;
        font-size: 24rpx;
}
.content .item .bottom text:first-of-type {
          font-size: 30rpx;
          color: #ff0000;
}

